$internal
$no.symbols
$no.xref
$recursive

subroutine minimum(str)

   s = str                   ;* Copy to avoid REMOVE interactions
   result = ''

   if s # '' then
      loop
         remove v from s setting delim
         if v # '' then
            if num(v) then
               result = v

               loop
               while delim
                  remove v from s setting delim
                  if v # '' then
                     if num(v) then
                        if v < result then result = v
                     end
                  end
               repeat
               exit
            end
         end
      while delim
      repeat
   end

   return value result
end

* END-CODE
