* START-CODE

program revstamp
   openseq './gplsrc/revstamp.h' to in.f else abort 'Cannot open gplsrc revstamp.h'
   openseq 'GPL.BP', 'REVSTAMP.H' to out.f else
      if status() then abort 'Cannot open GPL.BP REVSTAMP.H'
   end

   weofseq out.f
   loop
      readseq rec from in.f else exit
      rec = trimf(rec)
      if rec[1,2] = '/*' then rec = rec[2,9999]
      rec = change(rec, '*/', '')
      if rec[1,1] = '#' then
         rec[1,1] = '$'
         rec = change(rec, '_', '.')
      end

      writeseq rec to out.f else abort 'Write error'
   repeat

   return
end

* END-CODE
