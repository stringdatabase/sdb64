subroutine prog_info(obj_dir_path,obj_name,prog_name,prog_obj_sz,prog_comp_time,prog_comp_date,error_msg)
$catalog !prog_info
*
*
$INCLUDE GPL.BP HEADER.H
*
* Header field offsets (from 1)
* hdr.magic             =     1
* hdr.rev               =     2
* hdr.id                =     3    ;* Used after loading to memory
* hdr.start.offset      =     7
* hdr.args              =    11
* hdr.no.vars           =    13
* hdr.stack.depth       =    15
* hdr.sym.tab.offset    =    17
* hdr.lin.tab.offset    =    21
* hdr.object.size       =    25
* hdr.flags             =    29
* hdr.compile.time      =    31    ;* 4 bytes: = SYSTEM(1005)
* 
** Programs and subroutines
* hdr.refs              =    35
* hdr.program.name      =    37
* hdr.program.name.len  =   128
* object.header.size    =   165
* 

* obj_dir_path,obj_name,prog_name,prog_rev_at_comp,prog_comp_time,prog_comp_date,error_msg
 
openpath obj_dir_path to dir_path else
   error_msg = 'Opening Directory: ': obj_dir_path : ' failed (':status():')'
   return
end

mark.mapping dir_path, off


read obj from dir_path, obj_name else
   error_msg = 'Reading: ': obj_name : ' failed (':status():')'
   close dir_path
   return
end



prog_name = field(obj[HDR.PROGRAM.NAME, 999], char(0), 1)
prog_obj_sz = oconv(obj[HDR.OBJECT.SIZE, 4], 'IL')
*
c_date = oconv(obj[HDR.COMPILE.TIME, 4], 'IL')
c_time = rem(c_date , 86400)
c_date = div(c_date , 86400)
*
prog_comp_date = oconv(c_date, 'D2/')
prog_comp_time = oconv(c_time, 'MTH')

close dir_path
return


end
