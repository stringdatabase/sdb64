$internal
$no.symbols
$no.xref
function py_initialize()
$catalog !py_initialize

$include KEYS.H

deffun PY_IS_INITIALIZED() calling '!PY_IS_INITIALIZED'
deffun PY_RUNSTRING(py_script) calling '!PY_RUNSTRING'

* skip initialize if already so
if py_is_initialized() then
  rtnstat = 0
end else
  rtnstat = SDEXT('',@FALSE,SD_PyInit)
  if rtnstat = 0 then ;* success, setup stderr and stdout to include carriage return
    lf = char(10)
    script  = "import sys":lf
    script := "sys.stderr.reconfigure(newline='\r\n')":lf
    script := "sys.stdout.reconfigure(newline='\r\n')":lf
    rtnstat = PY_RUNSTRING(script)
  end
end
return rtnstat

end
